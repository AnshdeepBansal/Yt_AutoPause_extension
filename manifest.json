{
    "manifest_version": 3,
    "name": "YouTube Auto-Pause",
    "version": "1.1",
    "description": "Automatically pauses YouTube videos when switching tabs or applications.",
    "permissions": ["tabs", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": ["https://*.youtube.com/*"],
    "action": {
      "default_icon": {
        "16": "icon.png"
      }
    }
  }
  